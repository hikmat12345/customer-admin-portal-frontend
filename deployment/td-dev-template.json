{
  "family": $FAMILY,
  "networkMode": "awsvpc",
  "memory": "512",
  "cpu": "256",
  "executionRoleArn": "arn:aws:iam::271453939301:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::271453939301:role/ecsTaskExecutionRole",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "tags": [
    {
      "key": "env",
      "value": "dev"
    }
  ],
  "containerDefinitions": [
    {
      "name": $ECR_REPO_NAME,
      "image": $IMAGE,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": $AWSLOGS_GROUP,
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": $ECR_REPO_NAME
        }
      },
      "portMappings": [
        {
          "containerPort": $CONTAINER_PORT,
          "protocol": "tcp"
        }
      ],
      "secrets": [
        {
          "name": "TEST_PARAMETER",
          "valueFrom": "arn:aws:ssm:us-east-1:271453939301:parameter/test-secret-parameter"
        }
      ],
      "environment": [
        {
          "name": "NEXT_PUBLIC_API_BASE_URL",
          "value": "https://customer-admin-api.dev.v2.veroxos.com/api/v2"
        },
        {
          "name": "NEXTAUTH_URL",
          "value": "https://auth.dev.v2.veroxos.com"
        },
        {
          "name": "NEXT_PUBLIC_TICKET_SERVICE_URL",
          "value": "https://ticket-api.dev.v2.veroxos.com/api/v2"
        },
        {
          "name": "NEXT_PUBLIC_INVOICE_SERVICE_URL",
          "value": "https://invoice-api.dev.v2.veroxos.com/api/v2"
        },
        {
          "name": "NEXT_PUBLIC_INVENTORY_SERVICE_URL",
          "value": "https://inventory-api.dev.v2.veroxos.com/api/v2"
        },
        {
          "name": "NEXT_PUBLIC_REPORTING_SERVICE_URL",
          "value": "https://reporting-api.dev.v2.veroxos.com/api/v2"
        }
      ],
      "essential": true
    }
  ]
}
